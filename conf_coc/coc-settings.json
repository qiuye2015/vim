{
  "coc.preferences.extensionUpdateCheck": "never",
  "suggest.autoTrigger": "always",
  "suggest.timeout": 5000,
  "suggest.enablePreview": true,
  "suggest.floatEnable": true,
  "suggest.detailField": "preview",
  "suggest.completionItemKindLabels": {
    "class": "\uf0e8",
    "color": "\ue22b"
  },
  "codeLens.enable": true,
  // coc-highlight
  "highlight.colors.enable": true,
  "highlight.document.enable": true,
  "highlight.colorNames.enable": true,
  "highlight.disableLanguages": [],
  "colors.filetypes": ["*"],
  // coc-lists
  "list.source.mru.maxLength": 1000,
  "list.source.mru.ignoreGitIgnore": true,
  // rg/ag
  "list.source.grep.command": "ag",
  "list.source.tags.command": "ctags -R .",
  // coc-json
  "json.enable": true,
  "json.format.enable": true,
  // coc-yaml
  "yaml.enable": true,
  "yaml.completion": true,
  "yaml.format.enable": true,
  "yaml.format.bracketSpacing": true,
  // coc-prettier
  "prettier.enable": true,
  "prettier.prettierPath": "",
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "python",
    "c",
    "cpp",
    "markdown",
    "go"
  ],
  "diagnostic.displayByAle": true,
  //"diagnostic.warningSign": "!!",
  "diagnostic.messageTarget": "echo",
  "signature.target": "echo",
  "hover.target": "echo",
  // coc-snippets
  "snippets.autoTrigger": true,
  "snippets.ultisnips.enable": true,
  "snippets.ultisnips.directories": [
    "$HOME/.config/nvim/pack/vendor_fjp/start/vim-snippets/snippets/",
    "UltiSnips",
    "gosnippets/UltiSnips"
  ],
  "snippets.snipmate.enable": true,
  "snippets.snipmate.author": "FJP",
  "snippets.extends": {
    "cpp": ["c"],
    "latex": ["tex", "texmath"]
  },
  "snippets.userSnippetsDirectory": "$HOME/.config/nvim/Ultisnips/",
  // coc-translator
  "translator.engines": ["youdao"],
  // "translator.enableHover": true,
  // coc-vimlsp
  "vimlsp.diagnostic.enable": true,
  "vimlsp.indexes.runtimepath": true,
  "vimlsp.indexes.projectRootPatterns": [".git", "autoload", "plugin"],
  // coc-pyright
  "pyright.enable": true,
  "python.pythonPath": "python",
  "python.linting.enabled": true,
  "python.analysis.autoImportCompletions": true,
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Path": "/opt/homebrew/bin/autopep8",
  // 显示嵌入式提示
  "pyright.inlayHints.functionReturnTypes": false,
  "pyright.inlayHints.variableTypes": false,
  // coc-sh
  "sh.enable": true,
  // coc-clangd
  "clangd.enabled": true,
  "clangd.path": "/usr/bin/clangd",
  "clangd.checkUpdates": false,
  "clangd.disableCompletion": false,
  "clangd.disableDiagnostics": false,
  "clangd.disableSnippetCompletion": false,
  "clangd.compilationDatabasePath": ".vscode/",
  "clangd.arguments": [
    // compelie_commands.json 文件的目录位置(相对于工作区)
    // "--compile-commands-dir=build",
    // 全局补全（会自动补充头文件）
    "--all-scopes-completion"
  ],
  // coc-cmake
  "cmake.cmakePath": "cmake",
  "cmake.formatter": "cmake-format",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "args": ["serve", "-debug", "0.0.0.0:8484", "-rpc.trace"],
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  }
}
